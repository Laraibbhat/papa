<android.support.v7.widget.CardView android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:background="@color/colorPrimary"
    android:elevation="10dp"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#bcaaa4">

        <com.example.dheeraj.timetable.Utils.LetterImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:id="@+id/ivDayDetail"
            android:layout_margin="10dp"
            >
        </com.example.dheeraj.timetable.Utils.LetterImageView>


        <TextView
            android:id="@+id/tvDayDetail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="6dp"
            android:layout_marginTop="10dp"

            android:layout_toRightOf="@+id/ivDayDetail"
            android:text="Subjects"
            android:textColor="#212121"
            android:fontFamily="cursive"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/tvTimeDayDetail"
            android:layout_width="81dp"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/ivDayDetail"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="18dp"
            android:textColor="#212121"
            android:fontFamily="cursive"
            android:text="Time" />


    </RelativeLayout>


</android.support.v7.widget.CardView>

