<android.support.v7.widget.CardView android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:background="@color/colorPrimary"
    android:elevation="10dp"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.example.dheeraj.timetable.Utils.LetterImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:id="@+id/ivLetter"
            android:layout_margin="10dp"
            >
        </com.example.dheeraj.timetable.Utils.LetterImageView>



        <TextView
            android:id="@+id/tvMain"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="6dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"

            android:layout_toRightOf="@+id/ivLetter"
            android:text="Days"
            android:textAppearance="@color/colorPrimary"
            android:textSize="25sp"
            android:textStyle="bold"
            android:fontFamily="cursive"/>


    </RelativeLayout>


</android.support.v7.widget.CardView>

